# Cache control and Security Headers for Netlify
# https://docs.netlify.com/routing/headers/

# Global security headers for SEO and security
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

# HTML pages - no cache for fresh content
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.netlify.app https://www.google-analytics.com; frame-src 'self' https://www.youtube.com

# CSS and JS - cache for 1 hour
/css/*
  Cache-Control: public, max-age=3600, must-revalidate

/js/*
  Cache-Control: public, max-age=3600, must-revalidate

# Images - cache for 7 days
/images/*
  Cache-Control: public, max-age=604800, immutable

# Web manifest
/manifest.webmanifest
  Cache-Control: public, max-age=86400

# Fonts - cache for 30 days
/fonts/*
  Cache-Control: public, max-age=2592000, immutable

# Sitemap and robots - cache for 1 day
/sitemap.xml
  Cache-Control: public, max-age=86400
  
/robots.txt
  Cache-Control: public, max-age=86400
